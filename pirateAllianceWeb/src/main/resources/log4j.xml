<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{yyyy-MM-dd|HH:mm:ss}|%p|hon|app|%c|%t|%m%n" />
		</layout>
	</appender>

	<appender name="debug" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/var/pirateAlliance/Debug/debug.log" />
		<param name="Append" value="true" />
		<param name="Encoding" value="UTF-8" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{yyyy-MM-dd|HH:mm:ss}|%p|hon|app|%c|%t|%m%n" />
		</layout>
	</appender>

	<appender name="error" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/var/pirateAlliance/Error/error.log" />
		<param name="Append" value="true" />
		<param name="Encoding" value="UTF-8" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd|HH:mm:ss}|%p|hon|app|%c|%m%n" />
		</layout>
	</appender>

	<appender name="disp_op" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/var/pirateAlliance/disp_op.log" />
		<param name="Append" value="true" />
		<param name="Encoding" value="UTF-8" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd|HH:mm:ss}|%p|hon|app|%c|%m%n" />
		</layout>
	</appender>

	<category name="sys.debug">
		<priority value="DEBUG" />
		<appender-ref ref="debug" />
		<appender-ref ref="STDOUT" />
	</category>

	<category name="sys.error">
		<priority value="DEBUG" />
		<appender-ref ref="error" />
		<appender-ref ref="STDOUT" />
	</category>

	<category name="sys.disp_op">
		<priority value="DEBUG" />
		<appender-ref ref="disp_op" />
		<appender-ref ref="STDOUT" />
	</category>

	<root>
		<priority value="INFO" />
	</root>

</log4j:configuration>
